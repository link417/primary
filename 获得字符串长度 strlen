#include<stdio.h>
#include<string.h>
int main()
{
	char text[50];
	char connect[50];
	int num;
	printf("请输入一个字符串：\n");
	gets(text);
	num=strlen(text);
	printf("字符串的长度为：%d \n",num);
	printf("再输入一个字符串： \n");
	gets(connect);
	num=strlen(connect);
	printf("这个字符串长度为：%d \n",num);
	strcat(text,connect);
	num=strlen(text);
	printf("连接起来的的字符串长度为：%d \n",num);
	return 0;
	
}
