#include<stdio.h>
int main()
{
	int x;
	int one,two,five;
	scanf("%d",&x);
	
	for(one=1;one<x*10;one++){
			for(two=1;two<x*10/2;two++){
				for(five=1;five<x*10/5;five++){
					if(one+two*2+five*5==x*10){
						printf("可以用 %d 个一角硬币和 %d 个两角硬币和 %d五 个角硬币得到%d元\n",one,two,five,x);
						goto out;
					}
				}
				
			}
	}
	
	
	out:
		
	 return 0;
	
	
	
	
}
